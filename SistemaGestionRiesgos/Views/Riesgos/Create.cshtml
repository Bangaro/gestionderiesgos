@model SistemaGestionRiesgos.Models.Riesgo

@{
    ViewData["Title"] = "Create";
}


<!--Mensaje desde los controladores-->

@if (ViewBag.ActionMessage != null)
{
<div aria-live="assertive" aria-atomic="true" class="bg-dark fixed-top bd-example-toasts">
    <div class="toast-container position-absolute p-3 top-0 end-0" id="toastPlacement">
        <div class="toast @ViewBag.ActionClass">

            <div class="toast-header d-flex justify-content-between">
                <small>Hace un instante</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>

            <div class="toast-body dark-gray-text">
                @ViewBag.ActionMessage
            </div>
        </div>
    </div>
</div>
}


<h1 class="text-center dark-gray-text">Añadir Riesgo</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group dark-gray-text">
                        <label asp-for="Titulo" class="control-label">Título:</label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group dark-gray-text">
                        <label asp-for="Descripcion" class="control-label">Descripción:</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group dark-gray-text">
                        <label asp-for="Impacto" class="control-label">Impacto:</label>
                        <select asp-for="Impacto" class="form-control">
                            <option value="">Seleccionar...</option>
                            <option value="Bajo" class="light-green">Bajo</option>
                            <option value="Moderado" class="yellow">Moderado</option>
                            <option value="Alto" class="orange">Alto</option>
                            <option value="Muy Alto" class="salmon">Muy Alto</option>
                        </select>
                        <span asp-validation-for="Impacto" class="text-danger"></span>
                    </div>

                    <div class="form-group dark-gray-text">
                        <label asp-for="Probabilidad" class="control-label">Probabilidad:</label>
                        <select asp-for="Probabilidad" class="form-control">
                            <option value="">Seleccionar...</option>
                            <option value="Bajo" class="light-green">Bajo</option>
                            <option value="Moderado" class="yellow">Moderado</option>
                            <option value="Alto" class="orange">Alto</option>
                            <option value="Muy Alto" class="salmon">Muy Alto</option>
                        </select>
                        <span asp-validation-for="Probabilidad" class="text-danger"></span>
                    </div>


                    <div class="form-group dark-gray-text">
                        <label asp-for="Causa" class="control-label">Causa:</label>
                        <input asp-for="Causa" class="form-control" />
                        <span asp-validation-for="Causa" class="text-danger"></span>
                    </div>

                    <div class="form-group dark-gray-text">
                        <label asp-for="Consecuencia" class="control-label">Consecuencia:</label>
                        <input asp-for="Consecuencia" class="form-control" />
                        <span asp-validation-for="Consecuencia" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-2">
                        <button type="submit" class="btn light-blue porcelain">Crear Riesgo</button>
                        <a asp-action="Index" asp-controller="Home" class="btn salmon porcelain ml-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



