@model SistemaGestionRiesgos.DTO.CambiarPasswordDTO

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Cambiar Contraseña</h5>
                    <hr>

                    <form asp-action="CambiarPassword" asp-controller="Usuarios" method="post">
                        <div class="mb-3">
                            <label asp-for="@Model.Email" class="form-label">Correo:</label>
                            <input asp-for="@Model.Email" type="email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.OldPassword" class="form-label">Contraseña Actual:</label>
                            <input asp-for="@Model.OldPassword" type="password" class="form-control"/>
                            <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.NewPassword" class="form-label">Nueva Contraseña:</label>
                            <input asp-for="@Model.NewPassword" type="password" class="form-control"/>
                            <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.ConfirmPassword" class="form-label">Confirmar Nueva Contraseña:</label>
                            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control"/>
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>