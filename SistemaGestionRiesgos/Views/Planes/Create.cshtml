@model SistemaGestionRiesgos.Models.Plan

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center dark-gray-text">Añadir Plan</h1>
<hr />


<!--Mensaje desde los controladores-->

@if (ViewBag.ActionMessage != null)
{
<div aria-live="assertive" aria-atomic="true" class="bg-dark fixed-top bd-example-toasts">
    <div class="toast-container position-absolute p-3 top-0 end-0" id="toastPlacement">
        <div class="toast @ViewBag.ActionClass">

            <div class="toast-header d-flex justify-content-between">
                <small>Hace un instante</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>

            <div class="toast-body dark-gray-text">
                @ViewBag.ActionMessage
            </div>
        </div>
    </div>
</div>
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group dark-gray-text">
                        <label asp-for="IdRiesgo" class="control-label">Riesgo:</label>
                        <select asp-for="IdRiesgo" class="form-control" asp-items="ViewBag.Riesgos">
                            <option value="">Seleccionar...</option>
                        </select>
                        <span asp-validation-for="IdRiesgo" class="text-danger"></span>
                    </div>
                    
                    
                    <div class="form-group dark-gray-text">
                        <label asp-for="TipoPlan" class="control-label">Tipo de plan:</label>
                        <select asp-for="TipoPlan" class="form-control">
                            <option value="">Seleccionar...</option>
                            <option value="Continuidad" >Continuidad</option>
                            <option value="Contingencia" >Contingencia</option>
                        </select>
                        <span asp-validation-for="TipoPlan" class="text-danger"></span>
                    </div>

                    <div class="form-group dark-gray-text">
                        <label asp-for="Descripcion" class="control-label">Descripción:</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>


                    <div class="form-group text-center mt-2">
                        <button type="submit" class="btn light-blue porcelain">Crear Plan</button>
                        <a asp-action="Index" asp-controller="Home" class="btn salmon porcelain ml-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



